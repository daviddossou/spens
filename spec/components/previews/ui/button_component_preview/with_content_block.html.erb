<div class="max-w-xl mx-auto p-8">
  <h2 class="text-2xl font-bold mb-6">Button with Content Block</h2>

  <p class="text-gray-600 mb-4">
    Buttons can accept content blocks for more complex markup like icons or custom HTML.
  </p>

  <div class="space-y-4">
    <%= render Ui::ButtonComponent.new(variant: :primary, size: :md) do %>
      <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Add Item
    <% end %>

    <%= render Ui::ButtonComponent.new(variant: :success, size: :md) do %>
      <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      Save Changes
    <% end %>

    <%= render Ui::ButtonComponent.new(variant: :danger, size: :md) do %>
      <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
      Delete
    <% end %>
  </div>

  <div class="mt-6 p-4 bg-gray-50 rounded">
    <h3 class="font-semibold mb-2">ðŸ’¡ Usage:</h3>
    <p class="text-sm text-gray-700">Pass a block to the component to render custom content instead of just text.</p>
  </div>
</div>
