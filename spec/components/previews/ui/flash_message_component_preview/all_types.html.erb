<% content_for :preview_title, "Flash Messages - All Types" %>

<div class="space-y-6">
  <p class="text-gray-600">
    Showcase of all flash message types and their styling variations.
  </p>

  <div class="space-y-4">
    <div class="border border-gray-200 rounded-lg p-6 bg-gray-50">
      <h4 class="text-sm font-semibold text-gray-900 mb-4">Standard Message Types</h4>

      <div class="space-y-3">
        <!-- Success Messages -->
        <div>
          <h5 class="text-xs font-medium text-gray-700 mb-2">Success (notice/success)</h5>
          <%= render Ui::FlashMessageComponent.new({ notice: "Operation completed successfully!" }) %>
          <%= render Ui::FlashMessageComponent.new({ success: "Profile updated successfully!" }) %>
        </div>

        <!-- Error Messages -->
        <div>
          <h5 class="text-xs font-medium text-gray-700 mb-2">Error (alert/error)</h5>
          <%= render Ui::FlashMessageComponent.new({ alert: "Invalid credentials. Please try again." }) %>
          <%= render Ui::FlashMessageComponent.new({ error: "Failed to save changes." }) %>
        </div>

        <!-- Warning Messages -->
        <div>
          <h5 class="text-xs font-medium text-gray-700 mb-2">Warning</h5>
          <%= render Ui::FlashMessageComponent.new({ warning: "Your session will expire soon." }) %>
        </div>

        <!-- Info Messages -->
        <div>
          <h5 class="text-xs font-medium text-gray-700 mb-2">Info</h5>
          <%= render Ui::FlashMessageComponent.new({ info: "A verification email has been sent." }) %>
        </div>
      </div>
    </div>

    <div class="border border-gray-200 rounded-lg p-6 bg-gray-50">
      <h4 class="text-sm font-semibold text-gray-900 mb-4">Multiple Messages</h4>
      <%= render Ui::FlashMessageComponent.new({
        notice: "Profile updated successfully!",
        warning: "Please verify your email address.",
        info: "New features are available in settings."
      }) %>
    </div>

    <div class="border border-gray-200 rounded-lg p-6 bg-gray-50">
      <h4 class="text-sm font-semibold text-gray-900 mb-4">Long Messages</h4>
      <%= render Ui::FlashMessageComponent.new({
        alert: "This is a longer error message that demonstrates how the flash message component handles extended content. It should wrap properly and maintain readability while providing detailed information about the error and potential solutions."
      }) %>
    </div>
  </div>

  <div class="mt-8 p-4 bg-blue-50 border border-blue-200 rounded-lg">
    <h4 class="text-sm font-medium text-blue-900 mb-2">Usage Example</h4>
    <pre class="text-xs text-blue-800 overflow-x-auto"><code>&lt;%= render Ui::FlashMessageComponent.new(flash) %&gt;</code></pre>
  </div>

  <div class="mt-4 p-4 bg-green-50 border border-green-200 rounded-lg">
    <h4 class="text-sm font-medium text-green-900 mb-2">Features</h4>
    <ul class="text-xs text-green-800 space-y-1">
      <li>✓ Automatic styling based on message type</li>
      <li>✓ Dismissible with × button</li>
      <li>✓ Icons for each message type</li>
      <li>✓ Supports multiple simultaneous messages</li>
      <li>✓ Handles custom message types gracefully</li>
      <li>✓ Responsive design for mobile devices</li>
    </ul>
  </div>
</div>
