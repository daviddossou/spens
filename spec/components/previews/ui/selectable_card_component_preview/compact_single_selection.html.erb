<div class="max-w-2xl mx-auto p-8">
  <h2 class="text-2xl font-bold mb-6">Compact Mode - Single Selection (Radio Buttons)</h2>

  <p class="text-gray-600 mb-4">
    Compact cards with radio button behavior (only one can be selected at a time). Perfect for mobile-friendly selectors.
  </p>

  <div class="mb-4 p-3 bg-blue-50 rounded text-sm">
    <strong>Features:</strong> <code>compact: true</code>, <code>multiple: false</code>, <code>show_visual_checkbox: false</code>
  </div>

  <%= form_with url: "#", method: :post do |form| %>
    <div class="flex gap-2 flex-wrap">
      <%= render Ui::SelectableCardComponent.new(
        item: { name: "Expense", value: "expense", description: "Money you spend" },
        form: form,
        field: :kind,
        selected: true,
        compact: true,
        multiple: false,
        show_visual_checkbox: false,
        additional_classes: 'text-center'
      ) %>

      <%= render Ui::SelectableCardComponent.new(
        item: { name: "Income", value: "income", description: "Money you receive" },
        form: form,
        field: :kind,
        selected: false,
        compact: true,
        multiple: false,
        show_visual_checkbox: false,
        additional_classes: 'text-center'
      ) %>

      <%= render Ui::SelectableCardComponent.new(
        item: { name: "Loan", value: "loan", description: "Money you lend" },
        form: form,
        field: :kind,
        selected: false,
        compact: true,
        multiple: false,
        show_visual_checkbox: false,
        additional_classes: 'text-center'
      ) %>
    </div>

    <div class="mt-4">
      <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
        Submit Selection
      </button>
    </div>
  <% end %>
</div>
