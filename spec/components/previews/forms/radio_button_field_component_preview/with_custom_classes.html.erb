<div class="preview-container" style="max-width: 600px; padding: 2rem;">
  <style>
    .custom-radio-wrapper {
      padding: 1rem;
      border: 2px solid #e5e7eb;
      border-radius: 0.5rem;
      transition: all 0.2s;
    }
    .custom-radio-wrapper:hover {
      border-color: #3b82f6;
      background-color: #eff6ff;
    }
    .custom-label {
      font-weight: 600;
      color: #1f2937;
      cursor: pointer;
    }
    .custom-radio {
      width: 20px;
      height: 20px;
      cursor: pointer;
    }
  </style>

  <h3 style="margin-bottom: 1.5rem;">Choose your color theme</h3>

  <%= form_with(model: User.new, url: "#", method: :post) do |f| %>
    <div style="display: flex; flex-direction: column; gap: 1rem;">
      <%= render Forms::RadioButtonFieldComponent.new(
        form: f,
        field: :theme,
        value: "light",
        label: "Light Mode",
        wrapper_classes: "custom-radio-wrapper",
        label_classes: "custom-label",
        radio_classes: "custom-radio"
      ) %>

      <%= render Forms::RadioButtonFieldComponent.new(
        form: f,
        field: :theme,
        value: "dark",
        label: "Dark Mode",
        wrapper_classes: "custom-radio-wrapper",
        label_classes: "custom-label",
        radio_classes: "custom-radio"
      ) %>

      <%= render Forms::RadioButtonFieldComponent.new(
        form: f,
        field: :theme,
        value: "auto",
        label: "Auto (System Default)",
        wrapper_classes: "custom-radio-wrapper",
        label_classes: "custom-label",
        radio_classes: "custom-radio"
      ) %>
    </div>
  <% end %>

  <div style="margin-top: 2rem; padding: 1rem; background: #f3f4f6; border-radius: 0.5rem;">
    <h4 style="margin-bottom: 0.5rem; font-size: 0.875rem; font-weight: 600;">Custom Classes</h4>
    <ul style="font-size: 0.875rem; margin: 0.5rem 0; padding-left: 1.5rem;">
      <li><code>wrapper_classes</code> - Applied to the outer wrapper div</li>
      <li><code>label_classes</code> - Applied to the label element</li>
      <li><code>radio_classes</code> - Applied to the radio input itself</li>
    </ul>
  </div>
</div>
