<div class="preview-container" style="max-width: 600px; padding: 2rem;">
  <h3 style="margin-bottom: 1.5rem;">Choose your plan</h3>

  <%= form_with(model: User.new, url: "#", method: :post) do |f| %>
    <div style="display: flex; flex-direction: column; gap: 1rem;">
      <%= render Forms::RadioButtonFieldComponent.new(
        form: f,
        field: :plan,
        value: "basic",
        label: "Basic Plan"
      ) %>

      <%= render Forms::RadioButtonFieldComponent.new(
        form: f,
        field: :plan,
        value: "pro",
        label: "Pro Plan"
      ) %>

      <%= render Forms::RadioButtonFieldComponent.new(
        form: f,
        field: :plan,
        value: "enterprise",
        label: "Enterprise Plan"
      ) %>
    </div>
  <% end %>

  <div style="margin-top: 2rem; padding: 1rem; background: #f3f4f6; border-radius: 0.5rem;">
    <h4 style="margin-bottom: 0.5rem; font-size: 0.875rem; font-weight: 600;">Usage</h4>
    <pre style="font-size: 0.75rem; overflow-x: auto; white-space: pre-wrap;"><code>&lt;%= render Forms::RadioButtonFieldComponent.new(
  form: f,
  field: :plan,
  value: "basic",
  label: "Basic Plan"
) %&gt;</code></pre>
  </div>
</div>
