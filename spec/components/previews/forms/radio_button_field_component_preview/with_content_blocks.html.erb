<div class="preview-container" style="max-width: 600px; padding: 2rem;">
  <h3 style="margin-bottom: 1.5rem;">Choose your subscription</h3>

  <%= form_with(model: User.new, url: "#", method: :post) do |f| %>
    <div style="display: flex; flex-direction: column; gap: 1rem;">
      <%= render Forms::RadioButtonFieldComponent.new(
        form: f,
        field: :subscription,
        value: "free",
        label_classes: "subscription-label"
      ) do %>
        <div style="display: flex; align-items: center; gap: 0.5rem;">
          <strong>Free</strong>
          <span style="padding: 0.125rem 0.5rem; background: #e5e7eb; border-radius: 0.25rem; font-size: 0.75rem;">$0/month</span>
        </div>
      <% end %>

      <%= render Forms::RadioButtonFieldComponent.new(
        form: f,
        field: :subscription,
        value: "pro",
        label_classes: "subscription-label"
      ) do %>
        <div style="display: flex; align-items: center; gap: 0.5rem;">
          <strong>Pro</strong>
          <span style="padding: 0.125rem 0.5rem; background: #dbeafe; color: #1e40af; border-radius: 0.25rem; font-size: 0.75rem;">$19/month</span>
          <span style="padding: 0.125rem 0.5rem; background: #dcfce7; color: #166534; border-radius: 0.25rem; font-size: 0.75rem;">Popular</span>
        </div>
      <% end %>

      <%= render Forms::RadioButtonFieldComponent.new(
        form: f,
        field: :subscription,
        value: "enterprise",
        label_classes: "subscription-label"
      ) do %>
        <div style="display: flex; align-items: center; gap: 0.5rem;">
          <strong>Enterprise</strong>
          <span style="padding: 0.125rem 0.5rem; background: #fef3c7; color: #92400e; border-radius: 0.25rem; font-size: 0.75rem;">$99/month</span>
        </div>
      <% end %>
    </div>
  <% end %>

  <div style="margin-top: 2rem; padding: 1rem; background: #f3f4f6; border-radius: 0.5rem;">
    <h4 style="margin-bottom: 0.5rem; font-size: 0.875rem; font-weight: 600;">Content Blocks</h4>
    <p style="font-size: 0.875rem; margin: 0;">
      Pass a block to render rich HTML content as the label. This is perfect for adding badges, icons, or complex layouts.
      The content block takes precedence over the <code>label</code> parameter.
    </p>
  </div>
</div>
