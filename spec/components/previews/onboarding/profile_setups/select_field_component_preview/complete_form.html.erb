<%= form_with model: User.new, url: "#" do |form| %>
  <div style="max-width: 600px; margin: 0 auto;">
    <h2 style="margin-bottom: 1.5rem;">Profile Setup</h2>

    <div style="display: flex; flex-direction: column; gap: 1.5rem;">
      <%= render Onboarding::ProfileSetups::SelectFieldComponent.new(
        form: form,
        field: :country,
        required: true
      ) %>

      <%= render Onboarding::ProfileSetups::SelectFieldComponent.new(
        form: form,
        field: :currency,
        required: true
      ) %>

      <%= render Onboarding::ProfileSetups::SelectFieldComponent.new(
        form: form,
        field: :income_frequency
      ) %>

      <%= render Onboarding::ProfileSetups::SelectFieldComponent.new(
        form: form,
        field: :main_income_source
      ) %>

      <div style="margin-top: 1rem;">
        <%= form.submit "Continue", style: "padding: 0.75rem 2rem; background: #4F46E5; color: white; border: none; border-radius: 0.5rem; cursor: pointer; font-size: 1rem;" %>
      </div>
    </div>
  </div>
<% end %>
