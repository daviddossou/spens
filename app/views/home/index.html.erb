<div class="min-h-screen bg-off-white flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto">
    <%= render Navigation::LanguageSwitcherComponent.new(params: params) %>
  </div>

  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h1 class="mt-6 text-center text-3xl font-extrabold">
      <%= t('.welcome_title') %>
    </h1>
    <p class="mt-2 text-center text-sm">
      <%= t('.welcome_description') %>
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <div class="space-y-4">
        <%= render Ui::ButtonComponent.new(
          text: t('.sign_in_cta'),
          url: new_user_session_path,
          variant: :primary,
          full_width: true
        ) %>

        <%= render Ui::ButtonComponent.new(
          text: t('.sign_up_cta'),
          url: new_user_registration_path,
          variant: :secondary,
          full_width: true
        ) %>
      </div>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-secondary"><%= t('.features') %></span>
          </div>
        </div>

        <div class="mt-6 text-center">
          <ul class="text-sm text-secondary space-y-2">
            <li>✓ <%= t('.feature_auth') %></li>
            <li>✓ <%= t('.feature_jobs') %></li>
            <li>✓ <%= t('.feature_docker') %></li>
            <li>✓ <%= t('.feature_rails') %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
