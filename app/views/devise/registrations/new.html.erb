<% content_for :title, t('.sign_up') %>
<% content_for :subtitle do %>
  <%= t('.or') %>
  <%= link_to t('.sign_in_link'), new_session_path(resource_name), class: "font-medium text-primary hover:text-secondary" %>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= render Forms::InputFieldComponent.new(
    form: f,
    field: :first_name,
    type: :text_field,
    label: t('.first_name'),
    autocomplete: "given-name",
    required: true
  ) %>

  <%= render Forms::InputFieldComponent.new(
    form: f,
    field: :last_name,
    type: :text_field,
    label: t('.last_name'),
    autocomplete: "family-name",
    required: true
  ) %>

  <%= render Forms::InputFieldComponent.new(
    form: f,
    field: :email,
    type: :email_field,
    label: t('.email'),
    autocomplete: "email",
    required: true
  ) %>

  <%= render Forms::InputFieldComponent.new(
    form: f,
    field: :password,
    type: :password_field,
    label: t('.password'),
    autocomplete: "new-password",
    required: true,
    help_text: @minimum_password_length ? t('.characters_minimum', count: @minimum_password_length) : nil
  ) %>

  <%= render Forms::InputFieldComponent.new(
    form: f,
    field: :password_confirmation,
    type: :password_field,
    label: t('.password_confirmation'),
    autocomplete: "new-password",
    required: true
  ) %>

  <%= render Ui::ButtonComponent.new(
    form: f,
    text: t('.sign_up'),
    variant: :primary,
    full_width: true
  ) %>
<% end %>

<div class="mt-6">
  <%= render "devise/shared/links" %>
</div>
