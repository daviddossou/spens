<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <!-- Language switcher at top -->
  <div class="absolute top-4 right-4">
    <%= language_links %>
  </div>

  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold">
      <%= t('.edit_profile') %>
    </h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :first_name, t('.first_name'), class: "block text-sm font-medium" %>
          <div class="mt-1">
            <%= f.text_field :first_name, autocomplete: "given-name",
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-secondary focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :last_name, t('.last_name'), class: "block text-sm font-medium" %>
          <div class="mt-1">
            <%= f.text_field :last_name, autocomplete: "family-name",
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-secondary focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :email, t('.email'), class: "block text-sm font-medium" %>
          <div class="mt-1">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-secondary focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :password, t('.password'), class: "block text-sm font-medium" %>
          <span class="text-xs text-gray-500"><%= t('.leave_blank_if_no_change') %></span>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-500">(<%= @minimum_password_length %> <%= t('.characters_minimum') %>)</span>
          <% end %>
          <div class="mt-1">
            <%= f.password_field :password, autocomplete: "new-password",
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-secondary focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :password_confirmation, t('.password_confirmation'), class: "block text-sm font-medium" %>
          <div class="mt-1">
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-secondary focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div>
          <%= f.label :current_password, t('.current_password'), class: "block text-sm font-medium" %>
          <span class="text-xs text-gray-500"><%= t('.current_password_help') %></span>
          <div class="mt-1">
            <%= f.password_field :current_password, autocomplete: "current-password",
                class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-secondary focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div class="space-y-3">
          <%= f.submit t('.save'),
              class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-secondary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary" %>

          <%= button_to t('.cancel_account'), registration_path(resource_name),
              method: :delete, data: { confirm: t('.cancel_account_confirm'), "turbo-method": "delete" },
              class: "w-full flex justify-center py-2 px-4 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-red-50 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
        </div>
      <% end %>

      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
