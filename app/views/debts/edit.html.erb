<% content_for :title, t(".title.#{ @form.direction }") %>

<%= turbo_frame_tag "modal" do %>
  <div class="page-container page-container--narrow">
    <header class="page-header">
      <p class="page-header__subtitle"><%= t(".subtitle.#{ @form.direction }") %></p>
    </header>

    <div class="page-content">
      <%= form_with model: @form,
                    url: debt_path(id: @debt.id),
                    method: :patch,
                    class: "debt-form",
                    data: { controller: "transaction-form" } do |f| %>
        <%= render 'form', form: f %>

        <!-- Form Actions -->
        <div class="debt-form__actions">
          <%= render Ui::ButtonComponent.new(
            text: t(".update_debt.#{ @form.direction }"),
            type: :submit,
            variant: :primary,
            size: :lg,
            full_width: true
          ) %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
