<% content_for :title, t(".title.#{ @form.direction }") %>

<div class="page-container page-container--narrow">
  <header class="page-header">
    <%= link_to debt_path(id: @debt.id), class: "page-header__back-link" do %>
      <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <%= t('.back_to_debt') %>
    <% end %>

    <h1 class="page-header__title"><%= t(".title.#{ @form.direction }") %></h1>
    <p class="page-header__subtitle"><%= t(".subtitle.#{ @form.direction }") %></p>
  </header>

  <div class="page-content">
    <%= form_with model: @form,
                  url: debt_path(id: @debt.id),
                  method: :patch,
                  local: true,
                  class: "debt-form",
                  data: { controller: "transaction-form" } do |f| %>
      <%= render 'form', form: f %>

      <!-- Form Actions -->
      <div class="debt-form__actions">
        <%= render Ui::ButtonComponent.new(
          text: t(".update_debt.#{ @form.direction }"),
          type: :submit,
          variant: :primary,
          size: :lg,
          full_width: true
        ) %>

        <%= render Ui::ButtonComponent.new(
          text: t('.cancel'),
          url: debt_path(id: @debt.id),
          variant: :'outline-secondary',
          size: :lg,
          full_width: true
        ) %>
      </div>
    <% end %>
  </div>
</div>
