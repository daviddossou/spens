<% content_for :title, @debt.name %>

<div class="page-container page-container--narrow">
  <header class="page-header">
    <%= link_to debts_path, class: "page-header__back-link" do %>
      <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <%= t('.back_to_debts') %>
    <% end %>

    <h1 class="page-header__title"><%= @debt.name %></h1>
    <p class="page-header__subtitle"><%= t(".subtitle.#{ @debt.direction }") %></p>
  </header>

  <div class="page-content">
    <div class="commitment-detail-card">
      <%= render Ui::CommitmentCardComponent.new(
        title: @debt.name,
        current_value: @debt.total_reimbursed,
        target_value: @debt.total_lent,
        currency: current_user.currency
      ) %>
    </div>

    <div class="commitment-detail-actions">
      <h2><%= t('.actions_title') %></h2>
      <div class="action-buttons">
        <%= render Ui::ButtonComponent.new(
          text: t('.add_transaction'),
          url: new_transaction_path(debt_id: @debt.id, kind: @debt.direction == 'lent' ? 'debt_in' : 'debt_out'),
          variant: :primary,
          size: :lg,
          full_width: true
        ) %>

        <%= render Ui::ButtonComponent.new(
          text: t('.edit_debt'),
          url: edit_debt_path(id: @debt.id),
          variant: :secondary,
          size: :lg,
          full_width: true
        ) %>
      </div>
    </div>

    <% if @debt.note.present? %>
      <div class="commitment-detail-note">
        <h3><%= t('.note_title') %></h3>
        <p><%= @debt.note %></p>
      </div>
    <% end %>

    <div class="commitment-detail-transactions">
      <h2><%= t('.recent_transactions') %></h2>
      <% if @latest_transactions.any? %>
        <div class="space-y-2">
          <%= render TransactionItemComponent.with_collection(@latest_transactions, transaction: :itself) %>
        </div>
      <% else %>
        <p class="no-transactions"><%= t('.no_transactions') %></p>
      <% end %>
    </div>
  </div>
</div>
