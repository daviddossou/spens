<% content_for :title, t(".title.#{ @form.direction }") %>

<div class="page-container page-container--narrow">
  <header class="page-header">
    <h1 class="page-header__title"><%= t(".title.#{ @form.direction }") %></h1>
    <p class="page-header__subtitle"><%= t(".subtitle.#{ @form.direction }") %></p>
  </header>

  <div class="page-content">
    <%= form_with model: @form,
                  url: debts_path,
                  method: :post,
                  local: true,
                  class: "debt-form" do |f| %>
      <%= render 'form', form: f %>

      <!-- Form Actions -->
      <div class="debt-form__actions">
        <%= render Ui::ButtonComponent.new(
          text: t(".save_debt.#{ @form.direction }"),
          type: :submit,
          variant: :primary,
          size: :lg,
          full_width: true
        ) %>

        <%= render Ui::ButtonComponent.new(
          text: t('.cancel'),
          url: debts_path(direction: @form.direction),
          variant: :'outline-secondary',
          size: :lg,
          full_width: true
        ) %>
      </div>
    <% end %>
  </div>
</div>
