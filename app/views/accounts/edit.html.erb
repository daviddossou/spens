<% content_for :title, t('.title', account_name: @account.name) %>

<div class="page-container page-container--narrow">
  <header class="page-header">
    <%= link_to account_path(id: @account.id), class: "page-header__back-link" do %>
      <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <%= t('.back_to_account') %>
    <% end %>

    <h1 class="page-header__title"><%= t('.title', account_name: @account.name) %></h1>
    <p class="page-header__subtitle"><%= t('.subtitle') %></p>
  </header>

  <div class="page-content">
    <%= form_with model: @form,
                  url: account_path(id: @account.id),
                  method: :patch,
                  class: "account-form" do |f| %>
      <%= render 'form', form: f, disable_account_field: false %>

      <!-- Form Actions -->
      <div class="account-form__actions">
        <%= render Ui::ButtonComponent.new(
          text: t('.update_account'),
          type: :submit,
          variant: :primary,
          size: :lg,
          full_width: true
        ) %>

        <%= render Ui::ButtonComponent.new(
          text: t('.cancel'),
          url: account_path(id: @account.id),
          variant: :'outline-secondary',
          size: :lg,
          full_width: true
        ) %>
      </div>
    <% end %>
  </div>
</div>
