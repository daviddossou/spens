<% content_for :title, t('.title', account_name: @account.name) %>

<%= turbo_frame_tag "modal" do %>
  <div class="page-container page-container--narrow">
    <header class="page-header">
      <p class="page-header__subtitle"><%= t('.subtitle') %></p>
    </header>

    <div class="page-content">
      <%= form_with model: @form,
                    url: account_path(id: @account.id),
                    method: :patch,
                    class: "account-form" do |f| %>
        <%= render 'form', form: f, disable_account_field: false %>

        <!-- Form Actions -->
        <div class="account-form__actions">
          <%= render Ui::ButtonComponent.new(
            text: t('.update_account'),
            type: :submit,
            variant: :primary,
            size: :lg,
            full_width: true
          ) %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
