<header class="app-header" data-controller="navigation--profile-menu">
  <div class="app-header__inner">
    <%# Left — Profile avatar + dropdown %>
    <div class="app-header__left">
      <button class="app-header__avatar"
              type="button"
              data-action="click->navigation--profile-menu#toggle"
              aria-label="<%= t('navigation.header.settings') %>">
        <%= user_initials %>
      </button>

      <%# Backdrop to close dropdown %>
      <div class="app-header__dropdown-backdrop"
           data-navigation--profile-menu-target="backdrop"
           data-action="click->navigation--profile-menu#close"></div>

      <%# Dropdown menu %>
      <nav class="app-header__dropdown"
           data-navigation--profile-menu-target="menu"
           role="menu">
        <div class="app-header__dropdown-header">
          <p class="app-header__dropdown-name"><%= user_full_name %></p>
          <p class="app-header__dropdown-email"><%= user_email %></p>
        </div>

        <%= link_to settings_path, class: "app-header__dropdown-item", role: "menuitem" do %>
          <svg class="app-header__dropdown-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <%= t('navigation.header.settings') %>
        <% end %>

        <div class="app-header__dropdown-item app-header__dropdown-item--disabled" role="menuitem">
          <svg class="app-header__dropdown-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          <%= t('navigation.header.contact_support') %>
        </div>

        <div class="app-header__dropdown-divider"></div>

        <div class="app-header__dropdown-language">
          <%= render Navigation::LanguageSwitcherComponent.new(params: params) %>
        </div>

        <div class="app-header__dropdown-divider"></div>

        <%= link_to logout_path, method: :delete, class: "app-header__dropdown-item app-header__dropdown-item--danger", role: "menuitem", data: { "turbo-method": "delete" } do %>
          <svg class="app-header__dropdown-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
          <%= t('navigation.header.log_out') %>
        <% end %>
      </nav>
    </div>

    <%# Center — Page title %>
    <div class="app-header__center">
      <h1 class="app-header__title"><%= page_title %></h1>
    </div>

    <%# Right — Analytics %>
    <div class="app-header__right">
      <%= link_to analytics_path, class: "app-header__analytics-link", aria: { label: "Analytics" } do %>
        <svg class="app-header__analytics-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
      <% end %>
    </div>
  </div>
</header>
