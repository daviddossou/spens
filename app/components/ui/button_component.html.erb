<% if is_link? %>
  <%= link_to url, **final_options do %>
    <%= loading_spinner if loading %>
    <%= content.presence || text %>
  <% end %>
<% elsif is_form_builder? %>
  <%= form.submit (content.presence || text), **final_options %>
<% else %>
  <%= tag.button **final_options do %>
    <%= loading_spinner if loading %>
    <%= content.presence || text %>
  <% end %>
<% end %>
